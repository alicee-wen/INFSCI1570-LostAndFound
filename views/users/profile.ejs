<%- include('../misc/header') %>

<section class="container">
  <div class="profile-card">
    <h1>Your Profile</h1>
    <p>Welcome, <%= user.username %>!</p>


    <a href="/users/editProfile" class="btn btn-primary">Edit Profile</a>
    <a href="/logout" class="btn btn-secondary">Log Out</a>
  </div>

  <hr />

  <h2>Your Posts</h2>

  <% if (posts && posts.length > 0) { %>
    <ul class="post-list">
      <% posts.forEach(post => { %>
        <li class="post-card">
          <h3>
            <a href="/posts/<%= post._id %>">
              <%= post.title %>
            </a>
          </h3>

          <p>
            <strong>Status:</strong> <%= post.status || "N/A" %><br/>
          </p>

          <a href="/posts/<%= post._id %>/edit" class="btn btn-sm btn-outline">
            Edit Post
          </a>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>You havenâ€™t made any posts yet.</p>
    <a href="/posts/new" class="btn btn-primary">Create Your First Post</a>
  <% } %>

    <form method="POST" action="/logout">
    <button>Logout</button>
  </form>
</section>



